<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ScrollView
      android:id="@+id/gallery_scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.android.mvp.widge.pic.GalleryView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.android.mvp.widge.pic.GalleryView>
  </ScrollView>

  <FrameLayout
      android:id="@+id/previewParent"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clickable="true"
      android:visibility="gone">

    <com.android.mvp.widge.pic.PhotoViewPager
        android:id="@+id/preview_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000"
        android:visibility="gone">
    </com.android.mvp.widge.pic.PhotoViewPager>

    <com.android.mvp.widge.pic.TransSmallImageView
        android:id="@+id/transImage"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.android.mvp.widge.pic.TransSmallImageView>

    <com.android.mvp.widge.pic.TransBigImageView
        android:id="@+id/transBigImage"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </FrameLayout>

</FrameLayout>