<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 阴影 -->
    <item>
        <shape>
            <solid android:color="#90aaaaaa" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- 前景 -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#888000" />

            <gradient
                android:angle="0"
                android:centerColor="#FFf2f2f2"
                android:endColor="#FFaaaaaa"
                android:startColor="#FFaaaaaa"
                android:type="linear" />
        </shape>
    </item>
</layer-list>