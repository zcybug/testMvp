<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--apsts-->
  <declare-styleable name="AdvancedPagerSlidingTabStrip">
    <attr name="apTabIndicatorColor"
        format="color" />
    <attr name="apTabUnderlineColor"
        format="color" />
    <attr name="apTabDividerColor"
        format="color" />
    <attr name="apTabTextSelectColor"
        format="color" />
    <attr name="apTabIndicatorHeight"
        format="dimension" />
    <attr name="apTabUnderlineHeight"
        format="dimension" />
    <attr name="apTabDividerPadding"
        format="dimension" />
    <attr name="apTabPaddingLeftRight"
        format="dimension" />
    <attr name="apTabPaddingTopBottom"
        format="dimension" />
    <attr name="apTabScrollOffset"
        format="dimension" />
    <attr name="apTabBackground"
        format="reference" />
    <attr name="apTabShouldExpand"
        format="boolean" />
    <attr name="apTabTextAllCaps"
        format="boolean" />
    <attr name="apTabDrawMode"
        format="enum">
      <enum name="normal"
          value="0" />
      <enum name="text"
          value="1" />
    </attr>
  </declare-styleable>

  <declare-styleable name="JPTabBar">
    <attr name="TabNormalColor" format="reference|color"/>
    <attr name="TabSelectColor" format="reference|color"/>
    <attr name="TabSelectBg" format="reference|color"/>
    <attr name="TabTextSize" format="dimension|reference"/>
    <attr name="TabIconSize" format="dimension|reference"/>
    <attr name="TabIconFilter" format="boolean"/>
    <attr name="TabMargin" format="dimension|reference"/>
    <attr name="TabAnimate" format="enum">
      <enum name="Flip" value="0"/>
      <enum name="Rotate" value="1"/>
      <enum name="Scale" value="2"/>
      <enum name="Jump" value="3"/>
      <enum name="None" value="4"/>
      <enum name="Scale2" value="5"/>
    </attr>
    <attr name="TabMiddleBottomDis" format="dimension|reference"/>
    <attr name="TabMiddleView" format="reference"/>
    <attr name="TabMiddleHMargin" format="dimension|reference"/>
    <attr name="BadgeColor" format="reference|color"/>
    <attr name="BadgePadding" format="dimension|reference"/>
    <attr name="BadgeTextSize" format="reference|dimension"/>
    <attr name="BadgeVerticalMargin" format="reference|dimension"/>
    <attr name="BadgeHorizonalMargin" format="reference|dimension"/>
  </declare-styleable>
</resources>